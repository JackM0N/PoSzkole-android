<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewImie"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:text="ImiÄ™"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPrzedmiot"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Przedmiot"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewImie" />

    <TextView
        android:id="@+id/textViewGodzinaOd"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Od"
        android:gravity="right"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewGodzinaDo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewGodzinaDo"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Do"
        android:gravity="right"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="Status"
        android:gravity="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGodzinaOd" />

</androidx.constraintlayout.widget.ConstraintLayout>